<style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif}
.w3-bar,h1,button {font-family: "Montserrat", sans-serif}
.fa-anchor,.fa-coffee {font-size:200px}
.w3-query {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.w3-query h2 {
  text-align: center;
  color: #333;
  font-weight: normal;
}
.w3-query label {
  display: block;
  margin: 10px 0;
  color: #2196f3;
  font-weight: bold;
}
.w3-query input, .w3-query select {
  width: 100%;
  height: 40px;
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #ccc;
  outline: none;
}
.w3-query button {
  width: 100%;
  height: 40px;
  margin: 10px 0;
  background-color: #2196f3;
  color: white;
  border: none;
  cursor: pointer;
}
.w3-query button:hover {
  background-color: #177ccb;
}
.w3-query ul {
  list-style: none;
  padding: 0;
}
.w3-query li {
  margin: 10px 0;
  color: #333;
  font-weight: normal;
}
.w3-return {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.w3-return h4 {
  text-align: center;
  color: #333;
  font-weight: normal;
}
.w3-return ul {
  list-style: none;
  padding: 0;
}
.w3-return li {
  margin: 10px 0;
}
.w3-return a {
  display: block;
  width: 100%;
  height: 40px;
  margin: 10px 0;
  background-color: #2196f3;
  color: white;
  text-align: center;
  line-height: 40px;
  text-decoration: none;
}
.w3-return a:hover {
  background-color: #177ccb;
}
.query-button {
  background-color: #177ccb !important;
}

</style>
</head>
<body>

