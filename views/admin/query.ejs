<!-- Header -->
<header class="w3-container w3-blue w3-center" style="padding:128px 16px">
  <h1 class="w3-margin w3-jumbo">Query</h1>
  <p class="w3-xlarge">This is where you can query the data</p>
</header>

<!-- First Grid -->
<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-query">
      <h2>Query Form</h2>
      <form action="/Query" method="post" enctype="application/x-www-form-urlencoded">
        <label for="select">Select</label>
        <select id="select" name="select" required>
            <option value="StudentID">StudentID</option>
            <option value="StudentEmail">StudentEmail</option>
            <option value="Advisor">Advisor</option>
            <option value="HasAdvisor">Has Advisor</option>
            <option value="RA_TA">TA/RA</option>
            <option value="PassedQualifyingExam">Passed Qualifying Exam</option>
            <option value="PassedProposal">Passed Proposal</option>
            <option value="PassedDefense">Passed Defense</option>
            <option value="DissertaionComm">Dissertation Committee</option>
            <option value="SubmittedDIG">Submitted DIG</option>
            <option value="ExpectedGradYear">Expected Graduation Year</option>
            <option value="Graduated">Graduated</option>
        </select>
        <label for="where">Where</label>
        <input id="where" name="where" type="text" required/>
        <button>Query</button>
      </form>
      <ul>
        <li> <strong>All</strong> searches <strong>except</strong> the StudentID, Student Email, Advisor and Expected Graduation Year queries will use "true" of "false".
        <li> At this time you can search based on one field.  
      </ul>
    </div>

